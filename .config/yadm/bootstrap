# Install neovim theme and syntax files
mkdir -p ~/.config/nvim/colors
wget -O ~/.config/nvim/colors/alduin.vim https://raw.githubusercontent.com/AlessandroYorba/Alduin/refs/heads/master/colors/alduin.vim
mkdir -p ~/.config/nvim/syntax
wget -O ~/.config/nvim/syntax/fpp.vim https://raw.githubusercontent.com/nasa/fpp/refs/heads/main/editors/vim/fpp.vim

# Install oh-my-zsh
sh -c "$(curl -fsSL https://raw.githubusercontent.com/ohmyzsh/ohmyzsh/master/tools/install.sh)" --keep-zshrc

git clone https://github.com/zsh-users/zsh-completions ${ZSH_CUSTOM:-${ZSH:-~/.oh-my-zsh}/custom}/plugins/zsh-completions
git clone https://github.com/zsh-users/zsh-syntax-highlighting.git ${ZSH_CUSTOM:-~/.oh-my-zsh/custom}/plugins/zsh-syntax-highlighting
git clone https://github.com/zsh-users/zsh-autosuggestions ${ZSH_CUSTOM:-~/.oh-my-zsh/custom}/plugins/zsh-autosuggestions

